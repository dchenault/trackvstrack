
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    match /groups/{groupId} {
      // Any user can read a group's public data.
      allow get: if true;
      // Signed-in users can list groups.
      allow list: if isSignedIn();

      // A user can create a group if they are signed in and are the owner.
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      
      // The group owner can update or delete the group.
      allow update, delete: if isSignedIn() && resource.data.ownerId == request.auth.uid;

      match /users/{userId} {
        // Signed-in users can view members of a group.
        allow get, list: if isSignedIn();
        
        // Users can only create, edit, or remove their own membership from a group.
        allow write: if isSignedIn() && request.auth.uid == userId;
      }
    }

    match /spotify_tokens/{userId} {
      // Users can only manage their own Spotify tokens.
      allow read, write, delete: if isSignedIn() && request.auth.uid == userId;
    }

    match /databases/{database}/documents {

    match /spotify_tokens/{userId} {
      allow read, write: if request.auth != null
                         && request.auth.uid == userId;
    }

  }

    match /spotify_auth_states/{stateId} {
        // Only backend services using the Admin SDK can access auth states.
        // Client access is denied.
        allow read, write: if false;
    }
  }
}
